{
  "name": "@mendahu/utilities",
  "version": "1.0.0",
  "description": "General purpose zero-dependency open-source javascript utilities for any Node application.",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    },
    "./logger": {
      "import": {
        "types": "./dist/esm/logger/index.d.ts",
        "default": "./dist/esm/logger/index.js"
      },
      "require": {
        "types": "./dist/cjs/logger/index.d.ts",
        "default": "./dist/cjs/logger/index.js"
      }
    },
    "./typed-event-emitter": {
      "import": {
        "types": "./dist/esm/typed-event-emitter/index.d.ts",
        "default": "./dist/esm/typed-event-emitter/index.js"
      },
      "require": {
        "types": "./dist/cjs/typed-event-emitter/index.d.ts",
        "default": "./dist/cjs/typed-event-emitter/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs && npm run build:package-json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:package-json": "node scripts/create-package-json.js",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build && npm run test:run",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "author": "Jake Robins",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.10.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  }
}
